#1 Crear un diccionario vacío llamado perro
perro = {}

#2 Añadir nombre, color, raza, patas y edad al diccionario perro
perro["nombre"] = "Firulais"
perro["color"] = "marrón"
perro["raza"] = "pastor aleman"
perro["patas"] = 4
perro["edad"] = 5

#3 Crear un diccionario de estudiante y añadir nombre, apellido, sexo, edad, estado civil, habilidades, país, ciudad y dirección como claves del diccionario
estudiante = {
    "nombre": "Gabriel",
    "apellido": "Fox",
    "sexo": "masculino",
    "edad": 21,
    "estado civil": "soltero",
    "habilidades": ["programación", "futbol"],
    "país": "Colombia",
    "ciudad": "Cartagena",
    "dirección": "Daniel lemaitre carrera 20 calle 70"
}

#4 Obtener la longitud del diccionario del alumno
longitud_estudiante = len(estudiante)
print("Longitud del diccionario del estudiante:", longitud_estudiante)

#5 Obtener el valor de las habilidades y comprobar el tipo de datos, debe ser una lista
habilidades = estudiante["habilidades"]
print("Habilidades del estudiante:", habilidades)
print("Tipo de datos de las habilidades:", type(habilidades))

#6 Modificar los valores de las habilidades añadiendo una o dos habilidades
estudiante['habilidades'].append('Redaccion')
estudiante['habilidades'].append('Inglés')
print("Habilidades modificadas del estudiante:", estudiante['habilidades'])

#7 Obtener las claves del diccionario como una lista
claves_estudiante = list(estudiante.keys())
print("Claves del diccionario del estudiante:", claves_estudiante)

#8 Obtener los valores del diccionario como una lista
valores_estudiante = list(estudiante.values())
print("Valores del diccionario del estudiante:", valores_estudiante)

#9 Cambiar el diccionario a una lista de tuplas utilizando el método items()
tuplas_estudiante = list(estudiante.items())
print("Diccionario del estudiante como lista de tuplas:", tuplas_estudiante)

#10 Eliminar uno de los elementos del diccionario
del estudiante["dirección"]
print("Diccionario del estudiante después de eliminar la dirección:", estudiante)

#11 Borrar uno de los diccionarios
del perro
print("El diccionario 'perro' ha sido borrado.")
